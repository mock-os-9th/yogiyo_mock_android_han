<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/activity_address_detailinfo_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_address_detailinfo_iv_back_to_addressmain"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical|end"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/activity_address_detailinfo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:text="배달 주소 설정"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/activity_address_detailinfo_view_line1"
        android:layout_below="@id/activity_address_detailinfo_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>
    <TextView
        android:id="@+id/activity_address_detailinfo_tv_mainaddressname"
        android:layout_below="@+id/activity_address_detailinfo_view_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="주소명"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/activity_address_detailinfo_tv_roadaddressname"
        android:layout_below="@+id/activity_address_detailinfo_tv_mainaddressname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="16dp"
        android:text="도로명주소"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/activity_address_detailinfo_view_line2"
        android:layout_below="@id/activity_address_detailinfo_tv_roadaddressname"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/activity_address_detailinfo_relativelayout_input"
        android:layout_below="@id/activity_address_detailinfo_view_line2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/view_outline1"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        >

        <EditText
            android:id="@+id/activity_address_detailinfo_et_input_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:hint="상세 주소를 입력하세요(건물명, 동/호수 등)"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/activity_address_detailinfo_tv_addresscomplete"
        android:layout_below="@+id/activity_address_detailinfo_relativelayout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="요기로 배달"
        android:textSize="20dp"
        android:paddingVertical="15dp"
        android:gravity="center_horizontal"
        android:background="@color/colorGrey2"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>