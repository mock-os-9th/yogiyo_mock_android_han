<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">
    <FrameLayout
        android:id="@+id/main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_view_space1"/>


<View
    android:id="@+id/main_view_space1"
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="#717171"
    android:layout_above="@id/main_bottom_navigationview"/>

<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/main_bottom_navigationview"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    app:itemIconSize="21dp"
    app:menu="@menu/menu_bottomnavigationview"
    app:itemIconTint="@drawable/bottomnavigationview_menu_select_color"
    app:itemTextColor="@drawable/bottomnavigationview_menu_select_color"
    style="@style/BottomNavigationView"
    app:labelVisibilityMode="labeled"
    />

</RelativeLayout>