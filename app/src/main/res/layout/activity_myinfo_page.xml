<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/activity_myinfopage_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_myinfopage_iv_back"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical|end"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/activity_signup_tv_signuptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:text="내 정보 수정"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/activity_myinfopage_view_line1"
        android:layout_below="@id/activity_myinfopage_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <RelativeLayout
        android:id="@+id/activity_myinfopage_relativelayout_email"
        android:layout_below="@id/activity_myinfopage_view_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 아이디"
            android:textColor="@color/colorBlack1"/>
            <TextView
                android:id="@+id/activity_myinfopage_tv_email"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textColor="@color/colorBlack1"
                android:textSize="17dp"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/activity_myinfopage_view_line2"
        android:layout_below="@id/activity_myinfopage_relativelayout_email"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <RelativeLayout
        android:id="@+id/activity_myinfopage_relativelayout_password"
        android:layout_below="@id/activity_myinfopage_view_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/colorBlack1"/>
            <TextView
                android:id="@+id/activity_myinfopage_tv_password"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textColor="@color/colorBlack1"
                android:textSize="17dp"/>
        </LinearLayout>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="변경"
            android:textColor="@color/colorBlack"
            android:background="@drawable/view_outline1"
            android:layout_marginRight="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/activity_myinfopage_view_line3"
        android:layout_below="@id/activity_myinfopage_relativelayout_password"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <RelativeLayout
        android:id="@+id/activity_myinfopage_relativelayout_phonenum"
        android:layout_below="@id/activity_myinfopage_view_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화 번호"
                android:textColor="@color/colorBlack1"/>
            <TextView
                android:id="@+id/activity_myinfopage_tv_phonenum"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대전화 번호"
                android:textColor="@color/colorBlack1"
                android:textSize="17dp"/>
        </LinearLayout>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="변경"
            android:textColor="@color/colorBlack"
            android:background="@drawable/view_outline1"
            android:layout_marginRight="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/activity_myinfopage_view_line4"
        android:layout_below="@id/activity_myinfopage_relativelayout_phonenum"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <RelativeLayout
        android:id="@+id/activity_myinfopage_relativelayout_nickname"
        android:layout_below="@id/activity_myinfopage_view_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/colorBlack1"/>
            <TextView
                android:id="@+id/activity_myinfopage_tv_nickname"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/colorBlack1"
                android:textSize="17dp"/>
        </LinearLayout>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="변경"
            android:textColor="@color/colorBlack"
            android:background="@drawable/view_outline1"
            android:layout_marginRight="10dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="15dp"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/activity_myinfopage_view_line5"
        android:layout_below="@id/activity_myinfopage_relativelayout_nickname"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_myinfopage_view_line5"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/activity_myinfopage_tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="16dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/activity_myinfopage_tv_withdrawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원탈퇴"
            android:textSize="16dp"
            android:layout_marginRight="15dp"/>


    </LinearLayout>





</RelativeLayout>