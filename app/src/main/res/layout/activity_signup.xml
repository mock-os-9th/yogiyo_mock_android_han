<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/activity_signup_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/activity_signup_iv_back"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical|end"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/activity_signup_tv_signuptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:text="회원가입"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


<ScrollView
    android:layout_below="@id/activity_signup_relativelayout_top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/activity_signup_tv_snsloginment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="SNS계정으로도 간편하게 가입하실 수 있습니다."
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_below="@id/activity_signup_tv_snsloginment"
        android:id="@+id/activity_signup_linearlayout_social_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:background="@drawable/view_outline1"
            android:paddingVertical="17dp"
            android:paddingHorizontal="22dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/naver_capture"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="네이버로 로그인"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/view_outline1"
            android:paddingVertical="17dp"
            android:paddingHorizontal="22dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/kakao_capture"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오로 로그인"
                android:layout_marginLeft="7dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:id="@+id/activity_signup_view_space1"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/activity_signup_linearlayout_social_login"
        />

    <TextView
        android:layout_below="@+id/activity_signup_view_space1"
        android:id="@+id/activity_signup_tv_signupinfotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 정보"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="23dp"
        android:textStyle="bold"/>

    <LinearLayout
    android:id="@+id/activity_signup_linearlayout_input_email"
    android:layout_below="@id/activity_signup_tv_signupinfotxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_outline1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:paddingVertical="3dp">
    <EditText
        android:id="@+id/activity_login_tv_input_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingVertical="10dp"
        android:singleLine="true"
        android:hint="이메일 주소"
        android:textSize="15dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/activity_signup_linearlayout_input_password"
        android:layout_below="@id/activity_signup_linearlayout_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_outline1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="3dp">
        <EditText
            android:id="@+id/activity_login_tv_input_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:hint="비밀번호(영문+숫자+특수문자 조합 8자리 이상)"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_signup_linearlayout_input_checkpassword"
        android:layout_below="@id/activity_signup_linearlayout_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_outline1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="3dp">
        <EditText
            android:id="@+id/activity_login_tv_input_checkpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:hint="비밀번호 확인"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_signup_linearlayout_input_nickname"
        android:layout_below="@id/activity_signup_linearlayout_input_checkpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_outline1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="3dp">
        <EditText
            android:id="@+id/activity_login_tv_input_nickname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingVertical="10dp"
            android:singleLine="true"
            android:hint="닉네임(권장)"
            android:textSize="15dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_signup_linearlayout_input_phonenum"
            android:layout_below="@id/activity_signup_linearlayout_input_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_outline1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="3dp">
            <EditText
                android:id="@+id/activity_login_tv_input_phonenum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingVertical="10dp"
                android:singleLine="true"
                android:hint="휴대전화 번호(' - ' 제외)"
                android:textSize="15dp"/>
        </LinearLayout>

        <View
            android:id="@+id/activity_signup_view_space2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/activity_signup_linearlayout_input_phonenum"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/colorGrey3"
            />

        <TextView
            android:layout_below="@+id/activity_signup_view_space2"
            android:id="@+id/activity_signup_tv_law"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약관 및 동의"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/activity_signup_relativelayout_agreeall"
            android:layout_below="@id/activity_signup_tv_law"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/activity_signup_cb_agreeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_toRightOf="@id/activity_signup_cb_agreeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체동의"
                android:textSize="22dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/activity_signup_view_line1"
            android:layout_below="@+id/activity_signup_relativelayout_agreeall"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/colorGrey1"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
        android:id="@+id/activity_signup_relativelayout_agree1"
        android:layout_below="@id/activity_signup_view_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/activity_signup_cb_agree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@id/activity_signup_cb_agree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관 동의 (필수)"
            android:textSize="20dp"
            android:textColor="@color/colorBlack1"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용보기"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_signup_relativelayout_agree2"
            android:layout_below="@id/activity_signup_relativelayout_agree1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/activity_signup_cb_agree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/activity_signup_cb_agree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 수집 및 이용동의 (필수)"
                android:textSize="20dp"
                android:textColor="@color/colorBlack1"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_signup_relativelayout_agree3"
            android:layout_below="@id/activity_signup_relativelayout_agree2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/activity_signup_cb_agree3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/activity_signup_cb_agree3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전자금융거래 이용약관 (필수)"
                android:textSize="20dp"
                android:textColor="@color/colorBlack1"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_signup_relativelayout_agree4"
            android:layout_below="@id/activity_signup_relativelayout_agree3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/activity_signup_cb_agree4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/activity_signup_cb_agree4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만14세 이상 이용자 (필수)"
                android:textSize="20dp"
                android:textColor="@color/colorBlack1"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용보기"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/activity_signup_relativelayout_agree5"
            android:layout_below="@id/activity_signup_relativelayout_agree4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/activity_signup_cb_agree5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@id/activity_signup_cb_agree5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요기요 혜택 알림 동의 (선택)"
                android:textSize="20dp"
                android:textColor="@color/colorBlack1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/activity_signup_linearlayout_nextstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_signup_relativelayout_agree5"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/view_outline1"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="20dp"
           >
            <TextView
                android:id="@+id/activity_signup_tv_trynextstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
                android:textColor="@color/colorBlack"
                android:textSize="22dp"
               />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24_red"
                />
        </LinearLayout>



    </RelativeLayout>
</ScrollView>

</RelativeLayout>