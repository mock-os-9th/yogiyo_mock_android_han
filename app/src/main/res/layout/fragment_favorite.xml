<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/fragment_favorite_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/fragment_favorite_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:text="찜"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <View
        android:id="@+id/fragment_favorite_view_line1"
        android:layout_below="@+id/fragment_favorite_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/frgment_favorite_iv_nologin"
        android:layout_above="@id/fragment_favorite_tv_loginment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/fragment_favorite_tv_loginment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 후, 나의 찜 목록을 확인해보세요."
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/fragment_favorite_tv_gotologin"
        android:layout_below="@id/fragment_favorite_tv_loginment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="로그인하기"
        android:textColor="@color/colorWhite"
        android:background="@color/colorRed2"
        android:textSize="16dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="70dp"/>

</RelativeLayout>