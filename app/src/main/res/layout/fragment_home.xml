<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/fragment_home_linearlayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_home_iv_logo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/yogiyo_logo" />

        <TextView
            android:id="@+id/fragment_home_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:text="정자동 192" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="7dp"
            android:text="▼" />

    </LinearLayout>

    <View
        android:id="@+id/fragment_home_view_space1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"
        android:layout_below="@id/fragment_home_linearlayout_top_bar"
        />

    <ScrollView
        android:id="@+id/fragment_home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_home_view_space1"
        android:orientation="vertical">

<RelativeLayout
    android:id="@+id/fragment_home_relativelayout_in_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/fragment_home_linearlayout_advertise"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ViewFlipper
            android:id="@+id/fragment_home_viewflipper_advertise"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <View
        android:id="@+id/fragment_home_view_space2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/fragment_home_linearlayout_advertise"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_recyclerview_category_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_home_view_space2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="13dp"
        />

    <View
        android:id="@+id/fragment_home_view_space3"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/fragment_home_recyclerview_category_top"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/fragment_home_linearlayout_mytaste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_home_view_space3"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 입맛 저격!"
            android:textColor="@color/colorBlack"
            android:textSize="23dp"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_baseline_help_outline_24"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:alpha="0.4"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_recyclerview_mytaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_home_linearlayout_mytaste"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        />

    <View
        android:id="@+id/fragment_home_view_space4"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/fragment_home_recyclerview_mytaste"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/fragment_home_linearlayout_favorite_lot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_home_view_space4"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리동네 찜♡ 많은 음식점"
            android:textColor="@color/colorBlack"
            android:textSize="23dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_recyclerview_favorite_lot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_home_linearlayout_favorite_lot"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"

        />

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>