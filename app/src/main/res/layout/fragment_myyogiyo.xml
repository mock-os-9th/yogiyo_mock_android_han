<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/fragment_myyogiyo_linearlayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/fragment_myyogiyo_iv_alarm"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/fragment_myyogiyo_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:text="마이요기요"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/fragment_myyogiyo_iv_option"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>
    <View
        android:id="@+id/fragment_yogiyo_view_line1"
        android:layout_below="@+id/fragment_myyogiyo_linearlayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_below="@id/fragment_yogiyo_view_line1"
        android:id="@+id/fragment_myyogiyo_tv_login_ment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 하고 다양한 혜택을 받아보세요!"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize = "15dp"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@id/fragment_myyogiyo_tv_login_ment"
        android:id="@+id/fragment_yogiyo_linearlayout_twobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/fragment_myyogiyo_tv_gotologin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorRed2"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="13dp"
            android:textStyle="bold"
           />
        <TextView
            android:id="@+id/fragment_myyogiyo_tv_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="13dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:background="@drawable/tv_outline"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/fragment_yogiyo_linearlayout_twobutton"
        android:id="@+id/fragment_yogiyo_linearlayout_couponpointreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_outline1"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰함"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/view_outline1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포인트"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰관리"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0건"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="15dp"
               />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/fragment_myyogiyo_view_space1"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/fragment_yogiyo_linearlayout_couponpointreview"
        />
    <ImageView
        android:layout_below="@id/fragment_myyogiyo_view_space1"
        android:id="@+id/fragment_yogiyo_iv_superclub_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/myyogiyo_superclub"/>

    <RelativeLayout
        android:id="@+id/fragment_myyogiyo_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_yogiyo_iv_superclub_ad"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요기서 1초결제 관리"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/fragment_yogiyo_view_line2"
        android:layout_below="@+id/fragment_myyogiyo_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/fragment_myyogiyo_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_yogiyo_view_line2"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이벤트 및 공지사항"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/fragment_yogiyo_view_line3"
        android:layout_below="@+id/fragment_myyogiyo_relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/fragment_myyogiyo_relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_yogiyo_view_line3"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요기요 안내"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/fragment_yogiyo_view_line4"
        android:layout_below="@+id/fragment_myyogiyo_relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/fragment_myyogiyo_relativelayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_yogiyo_view_line4"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객만족센터"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_marginRight="13dp"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="15dp"
        android:id="@+id/fragment_myyogiyo_view_space2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@color/colorGrey3"
        android:layout_below="@id/fragment_myyogiyo_relativelayout4"
        />


</RelativeLayout>