<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="1dp"
        android:id="@+id/fragment_search_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/fragment_search_iv_searchicon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/ic_baseline_search_24_red"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/fragment_search_et_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17dp"
            android:hint="음식점명이나 메뉴명으로 검색하세요."
            android:layout_toRightOf="@id/fragment_search_iv_searchicon"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/fragment_search_view_line1"
        android:layout_below="@+id/fragment_search_relativelayout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/colorGrey1"/>

</RelativeLayout>