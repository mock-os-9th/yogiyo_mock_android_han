<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="13dp">

    <ImageView
        android:id="@+id/item_food_category_listview_iv_storeimage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:src="@drawable/fragment_home_mytaste1"/>
    <LinearLayout
        android:id="@+id/item_food_category_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_food_category_listview_iv_storeimage"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/item_food_category_listview_tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="바르다김선생-분당정자신기사거리점"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"/>
            <ImageView
                android:id="@+id/item_food_category_listview_iv_cesco"
                android:layout_marginLeft="10dp"
                android:layout_width="34dp"
                android:layout_height="26dp"
                android:src="@drawable/cesco_logo"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"/>
        </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="★"
              android:textSize="16dp"
              android:textColor="@color/colorStar"
              />
          <TextView
              android:id="@+id/item_food_category_listview_tv_ratingscore"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="4.1"
              android:textStyle="bold"
              android:textColor="@color/colorBlack"
              android:textSize="15dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="ㆍ"
              android:textSize="18dp"
              android:padding="-20dp"
              android:textStyle="bold"
              android:textColor="@color/colorGrey1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="리뷰"
              android:textSize="15dp"/>
          <TextView
              android:id="@+id/item_food_category_listview_tv_reviewcount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="133"
              android:textSize="15dp"
              android:layout_marginLeft="1dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="ㆍ"
              android:textSize="18dp"
              android:padding="-20dp"
              android:textStyle="bold"
              android:textColor="@color/colorGrey1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="사장님댓글"
              android:textSize="15dp"/>
          <TextView
              android:id="@+id/item_food_category_listview_tv_ownerreview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="133"
              android:textSize="15dp"
              android:layout_marginLeft="1dp"/>
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_food_category_listview_tv_signaturemenu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="제주흑돼지 김치찌개밥상, 제주흑돼지 김치찌개"/>
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_baseline_access_time_24"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/item_food_category_listview_tv_ordertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75~85분"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>