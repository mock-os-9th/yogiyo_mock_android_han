<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingVertical="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/selected_store_menu_listview_tv_menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="바른 김밥"
        android:textColor="@color/colorBlack1"
        android:textSize="17dp"/>
    <TextView
        android:id="@+id/selected_store_menu_listview_tv_menuinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="260dp"
        android:text="두번 구운 남해 청정지역 김에 신선한 재료를 가득 담은 김밥"
        android:textSize="14dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <TextView
        android:id="@+id/selected_store_menu_listview_tv_menuprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4000"
        android:textColor="@color/colorBlack1"
        android:textSize="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack1"
        android:text="원"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/selected_store_menu_listview_iv_menuimage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:src="@drawable/selected_store_popmenu1"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>